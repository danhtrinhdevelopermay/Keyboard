<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/spotlight_keyboard_background">

    <!-- Blur overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blur_overlay_background" />

    <!-- Main container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:background="@drawable/search_bar_background"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="12dp">

            <!-- Search Icon -->
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_search"
                android:layout_marginEnd="8dp"
                android:alpha="0.6" />

            <!-- Search Input -->
            <EditText
                android:id="@+id/searchInput"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Search"
                android:textColor="#FFFFFF"
                android:textColorHint="#99FFFFFF"
                android:textSize="17sp"
                android:fontFamily="sans-serif"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:maxLines="1" />

        </LinearLayout>

        <!-- Keyboard Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First Row (qwertyuiop) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_q"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_w"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_e"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_r"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_t"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_y"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_u"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_i"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_o"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_p"
                    android:layout_width="32dp"
                    android:layout_height="42dp" />

            </LinearLayout>

            <!-- Second Row (asdfghjkl) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_a"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_s"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_d"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_f"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_g"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_h"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_j"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_k"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_l"
                    android:layout_width="32dp"
                    android:layout_height="42dp" />

            </LinearLayout>

            <!-- Third Row (shift + zxcvbnm + backspace) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <include layout="@layout/spotlight_special_key"
                    android:id="@+id/key_shift"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_z"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_x"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_c"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_v"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_b"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_n"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_key"
                    android:id="@+id/key_m"
                    android:layout_width="32dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_special_key"
                    android:id="@+id/key_backspace"
                    android:layout_width="42dp"
                    android:layout_height="42dp" />

            </LinearLayout>

            <!-- Bottom Row (123, space, search) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <include layout="@layout/spotlight_special_key"
                    android:id="@+id/key_numbers"
                    android:layout_width="54dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_space_key"
                    android:id="@+id/key_space"
                    android:layout_width="200dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="6dp" />

                <include layout="@layout/spotlight_special_key"
                    android:id="@+id/key_search"
                    android:layout_width="54dp"
                    android:layout_height="42dp" />

            </LinearLayout>

            <!-- Bottom Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Emoji Button -->
                <ImageView
                    android:id="@+id/emojiButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_emoji"
                    android:background="@drawable/control_button_background"
                    android:padding="6dp"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Home Indicator -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_indicator"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp" />

                <!-- Microphone Button -->
                <ImageView
                    android:id="@+id/micButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_microphone"
                    android:background="@drawable/control_button_background"
                    android:padding="6dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>